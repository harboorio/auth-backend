    },
    "main": "./dist/index.js",
    "exports": "./dist/index.js",
    "scripts": {
        "check": "tsc --noEmit --skipLibCheck",
        "format:check": "prettier src --check",
        "format": "prettier $(git diff --cached --name-only --diff-filter=ACMR src | sed 's| |\\\\ |g') --write --ignore-unknown",
        "dev": "node build.mjs",
        "build": "NODE_ENV=production node build.mjs",
        "test": "vitest",
        "prepare": "husky || true",
        "commit": "cz"
    },
    "files": [
        ".npmrc",
        "compose.env",
        "dist/*",
        "package.json",
        "compose.yaml"
    ],
    "publishConfig": {
        "access": "public",
        "registry": "https://npm.pkg.github.com"
    },
    "config": {
        "commitizen": {
